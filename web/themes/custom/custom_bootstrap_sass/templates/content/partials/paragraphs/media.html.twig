<section class="section--media section--par">
  <div class="container">
    <div class="row">
      {% for img in paragraph.entity.field_media %}
        <div class="par-media par-media--{{ loop.length }}">
          <img src="{{ img.entity.field_media_image.entity.uri.value | image_style('basic') }}" alt="">
        </div>
      {% endfor %}
      {% if paragraph.entity.field_caption.value %}
        <div class="par-caption">
        <p class="caption">{{ paragraph.entity.field_caption.value | raw }}</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>
